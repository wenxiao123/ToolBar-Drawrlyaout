        <!--如果使用API Level 22以上编译的话，要拿掉前缀字-->
        <item name="windowNoTitle">true</item>
        <!--colorPrimary对应ToolBar颜色-->
        <item name="colorPrimary">#ed3615</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">#1d23a1</item>
        <!--colorAccent对应的是EditText编辑时、RadioButton选中、CheckBox等选中时的颜色-->
        <item name="colorAccent">#ff0008</item>
        <!--android:windowBackground窗口的颜色-->
        <item name="android:windowBackground">@color/windowColor</item>
